@model IEnumerable<Category>


<div class="container m-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">Category Lsist</h2>
         
        </div>
        <div class=" col-6 text-end">
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create">Add New Category</a>

        </div>
    </div>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Customer Name
                </th>
                <th>
                    Display Order
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-primary" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.ID">Edit</a>
                            <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.ID">Delete</a>
                        </div>
                        
                        
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>